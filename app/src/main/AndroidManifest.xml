<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.rootnetapp.rootnetintranet">

    <!-- Network related permissions -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- Storage related permissions -->
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <!-- Notification heads up permission -->
    <uses-permission android:name="android.permission.ACCESS_NOTIFICATION_POLICY" />
    <!-- Doze mode whitelist -->
    <uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />


    <application
        android:name=".ui.RootnetApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity
            android:name=".ui.main.MainActivity"
            android:label="@string/title_activity_main"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".ui.domain.DomainActivity"
            android:theme="@style/LoginStyle"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:theme="@style/LoginStyle"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.sync.SyncActivity"
            android:label="@string/title_activity_sync"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.editprofile.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.splash.SplashActivity"
            android:theme="@style/SplashTheme"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.quickactions.QuickActionsActivity"
            android:label="@string/quick_actions_activity_title"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.quickactions.changestatus.ChangeStatusActivity"
            android:label="@string/change_status_activity_title"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ui.workflowdetail.WorkflowDetailActivity"
            android:parentActivityName=".ui.main.MainActivity"
            android:windowSoftInputMode="adjustResize|stateHidden"
            android:label="@string/title_activity_edit_profile"
            android:theme="@style/AppTheme"
            android:screenOrientation="portrait"/>
        <service
            android:name=".services.background.WorkflowManagerService"
            android:enabled="true"
            android:exported="false">
        </service>
        <service android:name=".notifications.MessageReceiver">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".notifications.InstanceIdService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT" />
            </intent-filter>
        </service>
        <service android:name=".services.websocket.WebSocketService">
        </service>

        <service android:name=".services.websocket.WebSocketIntentService">
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="${applicationId}.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths"/>
        </provider>
    </application>

</manifest>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context="com.rootnetapp.rootnetintranet.ui.items.TimelineFragment">

        <TextView
            android:id="@+id/tv_workflowid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:paddingTop="10dp"
            android:text="@string/timeline"
            android:textAllCaps="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="18sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/detailsColor" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:layout_marginTop="20dp">

            <LinearLayout
                android:id="@+id/btn_selectdates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@+id/lyt_fltr"
                android:background="@drawable/unselectedfilter_bg"
                android:gravity="center_vertical"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingTop="10dp">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginEnd="4dp"
                    android:layout_marginStart="8dp"
                    android:src="@drawable/ic_mail_black_24dp"
                    android:tint="@color/transparentArrow" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_selecteddatetitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:text="Selected dates: "
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                    <TextView
                        android:id="@+id/tv_selecteddates"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:layout_marginStart="4dp"
                        android:text="(Dec 1 2017 - Dec 31 2017)"
                        android:textColor="@color/colorPrimary"
                        android:textSize="10sp" />

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:id="@+id/lyt_fltr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp">

                <Button
                    android:id="@+id/btn_day"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/unselectedfilter_bg"
                    android:text="@string/day"
                    android:textColor="@color/unselected_filter_text"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_week"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/unselectedfilter_bg"
                    android:text="@string/week"
                    android:textColor="@color/unselected_filter_text"
                    android:textSize="9sp" />

                <Button
                    android:id="@+id/btn_month"
                    android:layout_width="45dp"
                    android:layout_height="35dp"
                    android:background="@drawable/selectedfilter_bg"
                    android:text="@string/month"
                    android:textColor="@color/white"
                    android:textSize="9sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/grey_bg"
            android:layout_marginBottom="10dp"
            android:paddingEnd="15dp"
            android:paddingStart="15dp"
            android:layout_marginTop="10dp">

            <ImageView
                android:id="@+id/img_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:background="@drawable/unselectedfilter_bg"
                android:tint="@color/selected_filter"
                android:padding="15dp"
                android:src="@drawable/ic_mail_black_24dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toStartOf="@id/img_filter"
                android:layout_centerVertical="true"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:paddingBottom="3dp"
                    android:textStyle="bold"
                    android:text="@string/filtered_by"/>

                <TextView
                    android:id="@+id/tv_filtertype"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingTop="3dp"
                    android:paddingBottom="10dp"
                    android:textColor="@color/colorPrimary"
                    android:text="Filter Type"/>

            </LinearLayout>

        </RelativeLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_timeline"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingEnd="15dp"
            android:paddingStart="15dp" />

        <TextView
            android:id="@+id/lyt_notimeline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="15dp"
            android:paddingTop="10dp"
            android:paddingStart="15dp"
            android:text="@string/no_items"
            android:visibility="gone"/>

    </LinearLayout>
</layout>
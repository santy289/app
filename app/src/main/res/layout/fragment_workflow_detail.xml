                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="(0)"
                app:layout_constraintBaseline_toBaselineOf="@+id/detail_message_text"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/detail_clipboard_icon"
                tools:text="(20)" />



                        android:layout_marginStart="8dp"
                        android:layout_marginTop="8dp"
                        android:text="@string/public_comment"
                        android:textColor="@color/dark_gray"
                        android:switchPadding="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/input_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginTop="12dp"
                        android:layout_marginEnd="8dp"
                        android:layout_toStartOf="@id/btn_comment"
                        android:background="@drawable/spinner_bg"
                        android:paddingStart="10dp"
                        android:paddingTop="5dp"
                        android:paddingEnd="10dp"
                        android:paddingBottom="5dp"
                        android:textSize="18sp"
                        android:maxLines="5"
                        android:gravity="top|start"
                        android:inputType="textMultiLine"
                        android:scrollbars="vertical"
                        app:layout_constraintEnd_toStartOf="@+id/btn_comment"
                        app:layout_constraintHorizontal_bias="0.0"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/switch_private_public" />

                    <Button
                        android:id="@+id/btn_comment"
                        android:layout_width="105dp"
                        android:layout_height="53dp"
                        android:layout_marginTop="6dp"
                        android:backgroundTint="@color/green"
                        android:text="@string/comment"
                        android:textColor="@color/white"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/switch_private_public" />

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rec_comments"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/input_comment" />

                </android.support.constraint.ConstraintLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</layout>


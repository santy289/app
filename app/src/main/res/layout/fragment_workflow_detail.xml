<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context="com.rootnetapp.rootnetintranet.ui.workflowdetail.WorkflowDetailFragment">

        <TextView
            android:id="@+id/tv_workflow_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:textColor="@color/workflow_details_section_title"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@+id/sp_status"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="SEM-002" />

        <TextView
            android:id="@+id/tv_workflow_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/sp_status"
            app:layout_constraintStart_toStartOf="@+id/tv_workflow_id"
            app:layout_constraintTop_toBottomOf="@+id/tv_workflow_id"
            tools:text="EjecuciÃ³n de proyecto de softwareadsdsadasd" />

        <View
            android:id="@+id/view_spinner_background"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/round_corner"
            android:backgroundTint="@color/green"
            app:layout_constraintBottom_toBottomOf="@+id/sp_status"
            app:layout_constraintEnd_toEndOf="@+id/sp_status"
            app:layout_constraintStart_toStartOf="@+id/sp_status"
            app:layout_constraintTop_toTopOf="@+id/sp_status" />

        <Spinner
            android:id="@+id/sp_status"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:backgroundTint="@color/white"
            android:spinnerMode="dropdown"
            app:layout_constraintBottom_toBottomOf="@+id/view_separator"
            app:layout_constraintEnd_toStartOf="@+id/btn_options"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn_options"
            style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
            android:layout_width="35dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            app:backgroundTint="@color/white"
            app:icon="@drawable/ic_more_vert_black_24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp"
            app:iconTint="@color/black"
            app:layout_constraintBottom_toBottomOf="@id/sp_status"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/sp_status"
            app:rippleColor="@color/low_gray_text" />

        <View
            android:id="@+id/view_separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/detailsColor"
            app:layout_constraintTop_toBottomOf="@id/tv_workflow_name" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/view_pager"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/view_separator">

            <com.google.android.material.tabs.TabLayout
                android:id="@+id/tab_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                app:tabIndicatorColor="@color/colorAccent"
                app:tabMode="scrollable" />
        </androidx.viewpager.widget.ViewPager>

    </androidx.constraintlayout.widget.ConstraintLayout>


</layout>


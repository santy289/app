<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/lyt_approval_history"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:padding="16dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/tv_title_approval_history"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/workflow_detail_approval_history_fragment_approval_history"
                android:textAllCaps="true"
                android:textColor="@color/workflow_details_section_title"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:layout_width="0dp"
                android:layout_height="2dp"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:background="@color/workflow_details_section_title_bar"
                app:layout_constraintBottom_toBottomOf="@id/tv_title_approval_history"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@id/tv_title_approval_history"
                app:layout_constraintTop_toTopOf="@id/tv_title_approval_history" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_approval_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                app:layout_constraintStart_toStartOf="@id/tv_title_approval_history"
                app:layout_constraintTop_toBottomOf="@id/tv_title_approval_history" />

            <TextView
                android:id="@+id/no_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="@string/no_history_to_show"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Body2"
                android:visibility="gone"
                android:gravity="center"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@id/tv_title_approval_history"
                app:layout_constraintTop_toBottomOf="@id/tv_title_approval_history"
                tools:visibility="visible" />

            <!--android:layout_height="@dimen/workflow_detail_standard_height-->

        </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/selected_filter" />

                <RelativeLayout
                    android:id="@+id/nav_workflows"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="15dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/workflows"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/selected_filter" />

                <RelativeLayout
                    android:id="@+id/nav_sync"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="15dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/synchronization"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/selected_filter" />

                <RelativeLayout
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="15dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/selected_filter" />


                <RelativeLayout
                    android:id="@+id/nav_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:paddingStart="15dp"
                    android:paddingTop="18dp"
                    android:paddingEnd="15dp"
                    android:paddingBottom="18dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/exit"
                        android:textColor="@color/black" />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/selected_filter" />
            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/ll_bottom_items"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/scrollView2">

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/selected_filter" />

            <RelativeLayout
                android:id="@+id/nav_login_qr"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:paddingStart="15dp"
                android:paddingTop="18dp"
                android:paddingEnd="15dp"
                android:paddingBottom="18dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_qr"
                    android:textColor="@color/black" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
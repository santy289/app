<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android" >

    <RelativeLayout
        android:id="@+id/lyt_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border"
        android:paddingBottom="10dp"
        android:paddingEnd="10dp"
        android:paddingStart="10dp"
        android:paddingTop="10dp">

        <ImageView
            android:id="@+id/btn_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:padding="10dp"
            android:src="@drawable/ic_visibility_black_24dp"
            android:tint="@color/selected_filter" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:layout_toStartOf="@id/btn_detail"
            android:weightSum="3">

            <TextView
                android:id="@+id/tv_workflowid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"
                android:text="WRKF-xx"
                android:textSize="12sp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:id="@+id/tv_workflowtype"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"
                android:text="Workflow type"
                android:textSize="12sp"
                android:textColor="@color/selected_filter" />

            <TextView
                android:id="@+id/tv_actualstate"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:layout_weight="1"
                android:text="Initial State"
                android:textSize="12sp"
                android:textColor="@color/selected_filter"
                android:textStyle="bold" />

        </LinearLayout>

    </RelativeLayout>

</layout>
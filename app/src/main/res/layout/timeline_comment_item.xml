<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparentArrow"
        android:padding="2dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_poster"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:padding="2dp"
            android:src="@drawable/ic_perm_identity_black_24dp" />

        <LinearLayout
            android:id="@+id/lyt_cmnt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/img_poster"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="2dp">

                <TextView
                    android:id="@+id/tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingEnd="5dp"
                    tools:text="Jon Doe"
                    android:textColor="@color/selected_filter"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_comment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:text="gjgjh ghhjj ghjfg dsfsd"
                    android:textSize="12sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_reply"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:text="@string/reply"
                    android:textColor="@color/selected_filter"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    tools:text="x time ago"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/line"
            android:layout_width="2dp"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/rec_comments"
            android:layout_alignBottom="@+id/lyt_comments"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/selected_filter"
            android:visibility="gone" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rec_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/lyt_cmnt"
            android:layout_toEndOf="@+id/line"
            android:visibility="gone" />

        <RelativeLayout
            android:id="@+id/lyt_comments"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rec_comments"
            android:layout_toEndOf="@+id/line"
            android:background="@color/transparentArrow"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:visibility="gone"
            tools:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_centerVertical="true" />

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_comment"
                style="@style/Widget.MaterialComponents.TextInputEditText.OutlinedBox"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toStartOf="@id/btn_comment"
                android:layout_toEndOf="@id/img_profile"
                android:background="@drawable/edit_text_bg"
                android:hint="@string/add_comment"
                android:inputType="textMultiLine"
                android:maxLines="5"
                android:paddingStart="5dp"
                android:paddingTop="10dp"
                android:paddingEnd="5dp"
                android:paddingBottom="10dp"
                android:scrollbars="vertical"
                android:textSize="12sp"
                tools:text="TEST TEST TEST TEST TEST TEST TEST TEST TEST" />

            <Button
                android:id="@+id/btn_comment"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="16dp"
                app:backgroundTint="@color/green"
                app:cornerRadius="50dp"
                app:icon="@drawable/ic_message_black_24dp"
                app:iconGravity="textStart"
                app:iconPadding="0dp"
                app:iconSize="20sp" />

        </RelativeLayout>
    </RelativeLayout>
</layout>
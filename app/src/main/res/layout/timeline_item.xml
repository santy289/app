<?xml version="1.0" encoding="utf-8"?>
<layout>

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/lyt_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/lyt_data"
            android:layout_alignTop="@+id/lyt_data">

            <View
                android:id="@+id/top_line"
                android:layout_width="10dp"
                android:layout_height="30dp"
                android:background="@color/transparentArrow"
                android:layout_centerHorizontal="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_item"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/top_line"
                android:src="@color/selected_filter"/>

            <View
                android:id="@+id/bottom_line"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/transparentArrow"
                android:layout_below="@id/img_item"
                android:layout_centerHorizontal="true"/>

        </RelativeLayout>

        <FrameLayout
            android:id="@+id/lyt_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="60dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/spinner_bg"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_poster"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_perm_identity_black_24dp"/>

                    <LinearLayout
                        android:id="@+id/lyt_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/img_poster"
                        android:orientation="vertical"
                        android:padding="5dp"
                        android:layout_marginEnd="80dp">

                        <TextView
                            android:id="@+id/tv_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:paddingBottom="5dp"
                            android:text="Jon doe"/>

                        <TextView
                            android:id="@+id/tv_description"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"/>

                        <TextView
                            android:id="@+id/tv_comments"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:paddingTop="5dp"
                            android:textColor="@color/colorPrimary"
                            android:text="@string/comment_ammount"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_alignParentEnd="true"
                        android:layout_alignBottom="@+id/lyt_text"
                        android:layout_alignTop="@+id/lyt_text">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_margin="3dp"
                                android:src="@drawable/ic_access_time_black_24dp"/>

                            <TextView
                                android:id="@+id/tv_timepast"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:textSize="12sp"
                                android:layout_margin="3dp"
                                android:text="x time ago"/>

                        </LinearLayout>

                        <TextView
                            android:id="@+id/tv_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textSize="12sp"
                            android:layout_margin="3dp"
                            android:text="Mar x, 2018 12:03pm" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <LinearLayout
                                android:id="@+id/lyt_thumbsup"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">
                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:tint="@color/selected_filter"
                                    android:src="@drawable/ic_thumb_up_black_24dp" />

                                <TextView
                                    android:id="@+id/tv_upammount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/selected_filter"
                                    android:text="(0)"/>
                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/lyt_thumbsdown"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="12dp"
                                    android:layout_height="12dp"
                                    android:tint="@color/colorPrimaryDark"
                                    android:src="@drawable/ic_thumb_down_black_24dp" />

                                <TextView
                                    android:id="@+id/tv_downammount"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorPrimaryDark"
                                    android:text="(0)"/>

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rec_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"/>

                <RelativeLayout
                    android:id="@+id/lyt_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparentArrow"
                    android:visibility="gone">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/img_profile"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_centerVertical="true"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/input_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_text_bg"
                        android:layout_toEndOf="@id/img_profile"
                        android:layout_toStartOf="@id/btn_comment"
                        android:layout_centerVertical="true"
                        android:hint="@string/add_comment"
                        android:textSize="12sp"
                        android:paddingStart="10dp"
                        android:paddingEnd="10dp"
                        android:paddingTop="5dp"
                        android:paddingBottom="5dp" />

                    <Button
                        android:id="@+id/btn_comment"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:layout_margin="10dp"
                        android:layout_alignParentEnd="true"
                        android:textSize="12sp"
                        android:layout_centerVertical="true"
                        android:textColor="@color/white"
                        android:backgroundTint="@color/selected_filter"
                        android:text="@string/comment"/>

                </RelativeLayout>

            </LinearLayout>

        </FrameLayout>


    </RelativeLayout>
</layout>